---
import ThemeToggle from "@/components/ThemeToggle.astro";

const navItems = [
  { title: "Experiencia",
    label: "experiencia",
    url: "#experiencia" 
  },
  { title: "Proyectos",
    label: "proyectos",
    url: "#proyectos" 
  },
  { title: "Sobre mi",
    label: "sobre-mi",
    url: "#sobre-mi" 
  },
  { title: "Contacto",
    label: "contacto",
    url: "#contacto" 
  }

]
---

<header class="fixed top-0 z-10 flex justify-center items-center py-5 w-full mx-auto">
  <nav class="flex gap-x-5 px-2 rounded-full dark:bg-gray-950 text-gray-950 bg-gray-200/50 dark:text-gray-200 text-xs md:text-base font-medium">
    {
      navItems.map((item) => (
        <a 
          class="relative block px-2 py-2 transition hover:text-[#8b63f7] dark:hover:text[#8b63f7]" 
          href={item.url}
          aria-label = {item.label}>
          {item.title}
        </a>
      ))
    }
    
  </nav>
  <div>
    <ThemeToggle />
  </div>
</header>

